<%- include ('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs')%>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3><%=pergunta.titulo%></h3>
                <br>
                <h4>Descrição: </h4>
                <p><%=pergunta.descricao%></p>
                <br>   
            </div>
        </div>
        <br>
        <form method="POST" action="/responder">
            <h3>Responder:</h3>
            <textarea placeholder="Digite sua resposta" class="form-control" name="resposta_text"></textarea>
            <input type="hidden" name="id_pergunta" value="<%= pergunta.id%>"> 
            <br>
            <button type="submit" class="btn btn-success" style="position: flex;">Responder</button>
        </form>
        <br>
        <% respostas.forEach(respostas=>{ %>
        <div class="card">
            <div class="card-body">
                <h3>Resposta:</h3>
                <br>
                <p><%=respostas.resposta_text%></p>
                <br> 
                <form method="POST" action="/deletar_res">
                <input type="hidden" name="id_pergunta" value="<%= pergunta.id%>"> 
                <button type ="submit" class="btn btn-danger" style="position: absolute; right: 90px; top: 107px " name="delete_button" value="<%=respostas.id%>" >Deletar</button>  
                </form>
            </div>
        </div>
        <br>
        <% }) %>
    </div>
    
</body>

<%- include('partials/footer.ejs')%>