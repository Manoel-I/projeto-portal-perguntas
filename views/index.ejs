<%- include ('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntas" class="btn btn-success">Perguntar</a>
        <br>
        <br>
        <!-- estrutura no EJS-->
        <% perguntas.forEach(perguntas=> { %>
            <!--por se tratar de uma variavel precisa do sinal "=" -->
            
            <div class="card">
                <div class="card-body">
                    <h4><%=perguntas.titulo%></h4>
                    <br>
                    <br>
                    <div class="card-footer">
                        <a href="/pergunta/<%= perguntas.id %>"><button class="btn btn-success">Responder</button></a>
                    </div>
                </div>
            </div>
            <br>
        <% }) %>

    </div>
</body>

<%- include('partials/footer.ejs')%>